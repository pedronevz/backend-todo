generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model todo{
  id Int @id @default(autoincrement())
  task String @unique
  done Boolean
  category String @default("none")

  @@map("todos")
}

model category{
  id Int @id @default(autoincrement())
  name String @unique
}